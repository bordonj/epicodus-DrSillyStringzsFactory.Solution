@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}

<p>
  <a
    asp-action="Create"
    asp-controller="Machines"
    class="btn btn-primary"
  >
    <i class="bi bi-plus-square-fill"></i> Machine
</a>
</p> 
<p>
  <a
    asp-action="Index"
    asp-controller="Home"
    class="btn btn-primary"
  > 
    <i class="bi bi-house"></i> Home
  </a>
</p> 

