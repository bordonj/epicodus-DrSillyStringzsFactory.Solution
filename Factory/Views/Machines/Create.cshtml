@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new Machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new Machine" class="btn btn-default" />
}
<p>
  <a href='javascript:history.go(-1)' class="btn btn-primary">Go Back to Previous Page</a>
</p>
<p>@Html.ActionLink("Show all Machines", "Index")</p> 