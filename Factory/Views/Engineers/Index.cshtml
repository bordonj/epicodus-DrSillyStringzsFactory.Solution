@{
  Layout = "_Layout";
}
@using Factory.Models;


<h1>Engineers</h1>

@if (Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>
      @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })
      | number of machines: @(engineer.JoinEntities.Count)
    </li>
  }
</ul>

<p>
  <a
    asp-action="Create"
    asp-controller="Engineers"
    class="btn btn-primary"
  > 
    <i class="bi bi-plus-square"></i> Add new Engineer 
  </a>
</p> 
<p>
  <a
    asp-action="Index"
    asp-controller="Home"
    class="btn btn-primary"
  > 
    <i class="bi bi-house"></i> Home
  </a>
</p> 